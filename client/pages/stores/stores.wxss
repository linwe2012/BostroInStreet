@import "../../wxSearchView/wxSearchView.wxss";
.navigationBar{
  position: fixed;
  height: 82px;
  width: 100%;
  overflow: hidden;
  background: #29b6f6;
  background-size: cover;
  z-index: 999
}
.nav-background{
  position: absolute;
  top: 0;
  z-index: 0;
}
.results-stores{
  padding-left: 40rpx;
  padding-top:40rpx;
  background-color:#fbfbfb;
  padding-bottom: 30rpx;
  border-bottom: 1px #ddd solid;
}
.nav__txt{
  color: #fff;
  width: 100%;
  font-size: 1em;
  position: fixed;
  text-align: center;
  top:30px;
}
.search-opacity{
  background: rgba(0, 0, 0, 0);
  padding:8px 10px;
  width: 100%;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  position: absolute;
  box-sizing:border-box;
}
.icon__img{
  width:23px;
  height:23px;
  margin-right:10rpx;
  position: relative;
  left: -5px;
  opacity: 0.3;
  margin-top: 4px;
}
.rank-wrap{
  position: fixed;
  top:42px;
  height: 40px;
  white-space:nowrap;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.1);
  background-color: rgba(0, 0, 0, 0);
}
.sort__item{
  display: inline-block;
  color: rgba(255,255,255,0.65);
  text-align: center;
  padding-top:6px; 
  padding-bottom:5px; 
  width: 188rpx;
  height: 40px;
  background-color: rgba(0, 0, 0, 0);
}
.sort__item__active{
  display: inline-block;
  color: #fff;
  text-align: center;
  padding-top:6px; 
  padding-bottom:5px; 
  width: 188rpx;
  height: 27px;
  border-bottom: 3px #fff solid;
}
.store-name{
  
}
.store-score{
  font-size: 0.6em;
  color: #777;
}
.store-pic{
  width: 100rpx;
  height: 100rpx;
}
.store-pic-wrap{
  display: inline-block;
  border-radius: 2px;
  height: 100rpx;
  width:100rpx;
  overflow: hidden;
}
.result__head{
  white-space: nowrap;
  margin-bottom: 30rpx;
}
.result__head-info{
  display: inline-block;
  padding-left: 20rpx;
  vertical-align: top;
}
.result__pics{
  white-space: nowrap;
}
.item__img-wrap{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin-right: 20rpx; 
}
.item__img{
  width: 100%;
  height: 100%;
}

.icon{
  display: inline;
}
.store__intro{
  width: 450rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  text-align: center;
  text-overflow:ellipsis;
  overflow: hidden;
  color: #555;
  font-size: 0.7em;
  line-height: 40rpx;
  max-height: 80rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.store__intro-wrap{
  margin-top: 30rxp;
  width: 100%;
}