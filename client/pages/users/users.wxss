
.panel{
  height:420rpx;
  width: 100%;
  background: #ffe8be;
  overflow: hidden;
}
.panel-overlay{
  position: absolute;
  left: 0;
  top: 0;
  height:420rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}
.panel-img{
  display:block;
  width: 100%;
}

.avatar-wrap{
  display: inline-block;
  position: relative;
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  background: #f2e8e0;
  top: 80rpx;
  left: 260rpx;
  overflow: hidden;
}
.avatar{
  width: 230rpx;
  height: 230rpx;
}
.nick{
  position: relative;
  top: 80rpx;
  color: #601020;
  text-align: center;
  font-size: 1.5em;
  font-weight: bold;
  text-shadow:0px 0px 15px #fff,0px 0px 12px #fff,0px 0px 10px #fff, 0px 0px 9px #fff, 0px 0px 8px #fff, 0px 0px 7px #fff,0px 0px 6px #fff,0px 0px 5px #fff, 0px 0px 4px #fff, 0px 0px 3px #fff;
}
.nav-wrap{
  white-space:nowrap;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.1);
}
.nav{
  display: inline-block;
  color: #cebdb4;
  text-align: center;
  padding-top:20rpx; 
  padding-bottom:20rpx; 
  width: 376rpx;
  height: 50rpx;
  background: #b99988;
}
.nav-active{
  display: inline-block;
  color: #fff;
  text-align: center;
  padding-top:20rpx; 
  padding-bottom:20rpx; 
  width: 376rpx;
  height: 46rpx;
  border-bottom: 4rpx #fff solid;
  background: #b99988;
}
.tips{
  font-size: 0.88em;
  color: rgb(141, 136, 136);
  margin-top: 10rpx;
  padding: 10rpx;
  padding-left: 25rpx;
}
.comment__history{
  width: 690rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  background: #fff;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
  border-radius: 2px;
  color: rgba(0,0,0,.54);
}
.rates__title{
  font-size: 1.2em;
  color: #444;
  margin-top: 30rpx;
  margin-left: 20rpx;
  padding: 10rpx;
}
.rates__avatar-wrap{
  display: inline-block;
  margin:10rpx;
  width: 80rpx;
  height: 80rpx;
  background: #eee;
  overflow:hidden;
  border-radius: 50%;
}
.rates__avatar{
  width: 80rpx;
  height: 80rpx;
}
.rates__user{
  display: inline-block;
  position: relative;
  top: -30rpx;
  margin-left: 20rpx;
}
.user__nick{
  color: #444;
  font-size: 0.9em;
}
.user__info{
  color:#777;
  font-size: 0.58em;
  margin: 2rpx;
}
.user__content{
  position: relative;
  left: 120rpx;
  width: 550rpx;
  font-size: 0.8em;
  color: #444;
  white-space: normal;
  top: -15rpx;
}
.fab{
  background: #1a73e8;
  position: fixed;
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  z-index: 20;
  right: 20rpx;
  bottom: 20rpx;
}
.toast{
  position: fixed;
  background: #000;
  opacity: 0.7;
  z-index: 20;
  width: 100%;
  height: 60rpx;
  color:#fff;
  bottom: 0;
  text-align: center;
}
